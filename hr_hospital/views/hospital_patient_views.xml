<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="hr_hosp_patient_view_form" model="ir.ui.view">
    <field name="name">hr.hosp.patient.view.form</field>
    <field name="model">hr.hosp.patient</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="doctor_id"/>
          <field name="name"/>
          <field name="last_name"/>
          <field name="first_name"/>
          <field name="photo" widget="image" class="oe_avatar" options="{'image_preview': 'image_128'}"/>
          <field name="gender"/>   
          <field name="birth_date"/> 
          <field name="age"/>      
        </group>
      </form>
    </field>
  </record>

  <record id="hr_hosp_patient_view_tree" model="ir.ui.view">
    <field name="name">hr.hosp.patient.view.tree</field>
    <field name="model">hr.hosp.patient</field>
    <field name="arch" type="xml">
      <tree>
        <header>
          <button string="Change doctor" name="action_change_doctor" type="object" class="oe_highlight"/>
        </header>
        <field name="name"/>
        <field name="doctor_id"/>
      </tree>
    </field>
  </record>  

  <record id="hospital_patient_action_view_tree" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">hr.hosp.patient</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
