<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="hr_hosp_visit_view_form" model="ir.ui.view">
    <field name="name">hr.hosp.visit.view.form</field>
    <field name="model">hr.hosp.visit</field>
    <field name="arch" type="xml">
      <form delete="false">
        <sheet>
          <div class="oe_title">
            <group>
              <field name="visit_date_id"/>
              <field name="patient_id"/>
              <field name="state"/>
            </group>
          </div>
          <group>
            <field name="doctor_id"/>
            <field name="diagnosis_id"/>
          </group>
          <group>
            <field name="name" string="Description"/>
            <field name="comment"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="hr_hosp_visit_view_tree" model="ir.ui.view">
    <field name="name">hr.hosp.visit.view.tree</field>
    <field name="model">hr.hosp.visit</field>
    <field name="arch" type="xml">
      <tree>
        <field name="visit_date_id"/>
        <field name="patient_id"/>
        <field name="diagnosis_id"/>
        <field name="doctor_id"/>
        <field name="name" string="Description"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="hospital_visit_action_view_tree" model="ir.actions.act_window">
    <field name="name">Visits</field>
    <field name="res_model">hr.hosp.visit</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
