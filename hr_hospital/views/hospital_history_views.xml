<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="hr_hosp_history_changes_doctor_view_form" model="ir.ui.view">
    <field name="name">hr.hosp.history.changes.doctor.view.form</field>
    <field name="model">hr.hosp.history.changes.doctor</field>
    <field name="arch" type="xml">
      <form delete="false">
        <sheet>
          <div class="oe_title">
            <group>
              <field name="appointment_date_time"/>
              <field name="patient_id"/>
              <field name="doctor_id"/>
              <!-- <field name="name" string="Description"/> -->
            </group>
          </div>          
        </sheet>
      </form>
    </field>
  </record>

  <record id="hr_hosp_history_changes_doctor_view_tree" model="ir.ui.view">
    <field name="name">hr.hosp.history.changes.doctor.view.tree</field>
    <field name="model">hr.hosp.history.changes.doctor</field>
    <field name="arch" type="xml">
      <tree>
        <field name="appointment_date_time"/>
        <field name="patient_id"/>
        <field name="doctor_id"/>
      </tree>
    </field>
  </record>

  <record id="hospital_history_changes_doctor_action_view_tree" model="ir.actions.act_window">
    <field name="name">History</field>
    <field name="res_model">hr.hosp.history.changes.doctor</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
