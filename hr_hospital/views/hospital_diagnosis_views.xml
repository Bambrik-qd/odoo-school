<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="hr_hosp_diagnosis_search" model="ir.ui.view">
    <field name="name">hr.hosp.diagnosis.search</field>
    <field name="model">hr.hosp.diagnosis</field>
    <field name="arch" type="xml">
      <search>
        <field name="diagnosis_date"/>
        <field name="doctor_id"/>        
        <field name="patient_id"/>
        <field name="disease_id"/>
        <field name="description"/>
      </search>
    </field>
  </record>

  <record id="hr_hosp_diagnosis_view_form" model="ir.ui.view">
    <field name="name">hr.hosp.diagnosis.view.form</field>
    <field name="model">hr.hosp.diagnosis</field>
    <field name="arch" type="xml">
      <form>
        <group>
        <field name="diagnosis_date"/>
        <field name="doctor_id"/>        
        <field name="patient_id"/>
        <field name="disease_id"/>
        <field name="description"/>       
        </group>
      </form>
    </field>
  </record>

  <record id="hr_hosp_diagnosis_view_tree" model="ir.ui.view">
    <field name="name">hr.hosp.diagnosis.view.tree</field>
    <field name="model">hr.hosp.diagnosis</field>
    <field name="arch" type="xml">
      <tree create = 'true'>
        <field name="diagnosis_date"/>
        <field name="doctor_id"/>        
        <field name="patient_id"/>
        <field name="disease_id"/>
        <field name="description"/>
      </tree>
    </field>
  </record>

  <record id="hospital_diagnosis_action_view_tree" model="ir.actions.act_window">
    <field name="name">Diagnoses</field>
    <field name="res_model">hr.hosp.diagnosis</field>
    <field name="view_mode">tree,form</field>
  </record>

</odoo>
