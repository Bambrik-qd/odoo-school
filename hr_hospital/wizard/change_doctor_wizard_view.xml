<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hosp_change_doctor_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.hosp.change.doctor.wizard.view.form</field>
        <field name="model">hr.hosp.change.doctor</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <!-- <field name="old_doctor_ids" widget="many2many_tags"/> -->
                    <field name="new_doctor_id"/>          
                </group>
                <footer>
                    <button 
                        string="Change doctor" 
                        class="btn btn-primary" 
                        type="object" 
                        name="action_change_doctor" 
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>    

</odoo>
